@model IEnumerable<MusicLibrary.Models.Song>

@{
    ViewData["Title"] = "Find Music";
}

<h1>Find all the music you need</h1>

<p>
 Find Songs: <input type="text" name="songName"  />
        <input type="submit" value="Search" class="btn btn-outline-primary"/>
</p>
<a class="btn btn-primary" asp-action="Index" asp-controller="Reviews">See all Reviews</a>
<table class="table table-striped table-hover;text-primary">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MusicContent)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title) 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration) min
            </td>
            <td>
                    @if(item.MusicContent != null)
                    {
                        <audio controls>
                            <source src ="@Url.Content(item.MusicContent)" type="audio/mp3">
                            Your browser does not support the audio element.
                        </audio>
                    }
                </td>
            <td>
             <a class="btn btn-primary" asp-action="Create" asp-controller="Reviews" asp-route-id="@item.SongId">Create Reviews</a> |
             <a class="btn btn-primary" asp-action="AddSongPlaylist" asp-controller="Songs" asp-route-id="@item.SongId">Add song in playlist</a>
            </td>
        </tr>
}
    </tbody>
</table>
