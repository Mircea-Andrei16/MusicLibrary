@model IEnumerable<MusicLibrary.Models.Review>

@{
    ViewData["Title"] = "Reviews List";
}

<h1>This is the page with all reviews</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Text) of the Review
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Song)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Song.Title)
                </td>
                <td>
                    @if (User.IsInRole("Admin")) {
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.ReviewId">Details</a>
                        <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.ReviewId">Delete</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
<a class="btn btn-primary" asp-controller="Songs" asp-action="Index">Go back</a>